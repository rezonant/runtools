     "target": "es5",
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "moduleResolution": "node",
     "downlevelIteration": true,
     "esModuleInterop": true,
     "baseUrl": "./src",
     "outDir": "./dist",
     "sourceMap": true,
 
     "lib": [
         "es2016",
         "dom"
